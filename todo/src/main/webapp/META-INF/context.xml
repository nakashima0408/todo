<?xml version="1.0" encoding="UTF-8"?>
<Context displayName="Sample Java" path="/sample" docBase="sample"
         reloadable="true" crossContext="true">
    <Resource name="jdbc/mariadb"
              auth="Container"
              type="javax.sql.DataSource"
              username="root"
              password="root"
              driverClassName="org.mariadb.jdbc.Driver"
              url="jdbc:mariadb://localhost:3306/sample?useUnicode=true&amp;characterEncoding=UTF-8"
              maxTotal="4"
              maxIdle="10"
              maxWaitMillis="5000"
              validationQuery="SELECT count(*) FROM players"
              testOnBorrow="true"/>
</Context>